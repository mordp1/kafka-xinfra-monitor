# Kafka Monitor Environment Configuration
# Copy this file to .env and customize for your environment

# Kafka Connection
KAFKA_BOOTSTRAP_SERVERS=kafka:443
KAFKA_TOPIC=example-xinfra-monitor-topic
KAFKA_SECURITY_PROTOCOL=SSL

# SSL Configuration (paths inside container)
KAFKA_SSL_KEYSTORE_LOCATION=/opt/kafka-monitor/certs/user.p12
KAFKA_SSL_KEYSTORE_PASSWORD=CHANGE_ME
KAFKA_SSL_KEY_PASSWORD=CHANGE_ME

# Optional: Truststore
# KAFKA_SSL_TRUSTSTORE_LOCATION=/opt/kafka-monitor/certs/truststore.jks
# KAFKA_SSL_TRUSTSTORE_PASSWORD=CHANGE_ME

# Client Identification
KAFKA_CLIENT_ID=example-xinfra-monitor
KAFKA_CONSUMER_GROUP_ID=example-xinfra-monitor

# Topic Management
TOPIC_CREATION_ENABLED=false

# Performance Tuning
PRODUCE_RECORD_DELAY_MS=100
REPORT_INTERVAL_SEC=1

# Prometheus Metrics
ENABLE_JMX_EXPORTER=true
PROMETHEUS_EXPORTER_PORT=9090

# Optional: Wait for Kafka before starting
WAIT_FOR_KAFKA=false
